{
  "name": "kata-hexagonal-architecture",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": "^21.0.0",
    "npm": "^10.0.0"
  },
  "engineStrict": true,
  "type": "module",
  "scripts": {
    "prepare": "husky install",
    "start": "node --env-file ./.env ./dist/application/index.js",
    "build": "swc --config-file ./.swcrc ./src --out-dir ./dist --strip-leading-paths",
    "lint": "npm-run-all --parallel lint:*",
    "lint:typescript": "tsc --project ./tsconfig.json --noEmit",
    "lint:eslint": "eslint --config ./.eslintrc.json --cache ./src",
    "lint:prettier": "prettier --config ./.prettierrc.json --check ./src",
    "clean:eslint": "del ./.eslintcache",
    "clean:typescript": "del ./tsconfig.tsbuildinfo",
    "clean:build": "del ./dist",
    "clean": "npm-run-all --parallel clean:*",
    "test:run": "node --test ./dist/application/**/*.spec.js",
    "test": "npm-run-all build test:run",
    "test:e2e:run": "node --env-file ./.env.e2e --test ./dist/e2e/*.spec.js",
    "test:e2e": "npm-run-all build test:e2e:run",
    "db-migrate:up": "db-migrate --env db up",
    "db-migrate:down": "db-migrate --env db down"
  },
  "lint-staged": {
    "*.ts": [
      "tsc --noEmit"
    ],
    "*.{js,ts,json,html,css}": [
      "prettier --check"
    ],
    "*.css": [
      "stylelint --cache"
    ]
  },
  "dependencies": {
    "body-parser": "^1.0.0",
    "express": "^4.0.0",
    "express-json-validator-middleware": "^3.0.0",
    "json-schema": "^0.4.0",
    "pg": "^8.0.0"
  },
  "devDependencies": {
    "@swc/cli": "^0.3.0",
    "@swc/core": "^1.0.0",
    "@types/eslint": "^8.0.0",
    "@types/express": "^4.0.0",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.0.0",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@faker-js/faker": "^8.0.0",
    "db-migrate": "^0.11.0",
    "db-migrate-pg": "^1.0.0",
    "del-cli": "^5.0.0",
    "devmoji": "^2.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-config-standard-with-typescript": "^42.0.0",
    "eslint-import-resolver-typescript": "^3.0.0",
    "eslint-plugin-functional": "^6.0.0",
    "eslint-plugin-import": "^2.0.0",
    "eslint-plugin-json": "^3.0.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-unicorn": "^49.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.0.0",
    "npm-run-all": "^4.0.0",
    "prettier": "^3.0.0",
    "prettier-config-standard": "^7.0.0",
    "supertest": "^6.0.0"
  }
}
